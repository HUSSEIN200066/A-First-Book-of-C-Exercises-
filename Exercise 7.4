		{ 'T', 'F', 'T', 'T', 'T' },
		{ 'T', 'T', 'T', 'T', 'T' },
		{ 'T', 'T', 'F', 'F', 'T' },
		{ 'F', 'T', 'F', 'F', 'F' },
		{ 'F', 'F', 'F', 'F', 'F' },
		{ 'T', 'T', 'F', 'T', 'F' },
	};

